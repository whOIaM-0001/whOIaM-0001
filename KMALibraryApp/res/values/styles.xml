<resources>

    <!-- Base Card cho thống kê: chỉ định các thuộc tính hiển thị, KHÔNG đặt layout_width/height ở style -->
    <style name="StatCardBase">
        <!-- Viền (thuộc tính của MaterialCardView) -->
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/black</item>

        <!-- Bo góc & elevation -->
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">1dp</item>

        <!-- Padding mặc định cho nội dung card -->
        <item name="contentPadding">14dp</item>

        <!-- Cho ripple full -->
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="StatCard.Small" parent="StatCardBase">
        <item name="android:minHeight">84dp</item>
    </style>

    <style name="StatCard.Large" parent="StatCardBase">
        <item name="contentPadding">18dp</item>
        <item name="cardCornerRadius">14dp</item>
        <item name="cardElevation">2dp</item>
        <item name="android:minHeight">96dp</item>
    </style>

</resources>