<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Chi tiết phiếu mượn" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Mã phiếu -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã phiếu" />
            <TextView
                android:id="@+id/tvMaPhieu"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Mã sách -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sách" />
            <TextView
                android:id="@+id/tvMaSach"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Tên sách -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách" />
            <TextView
                android:id="@+id/tvTenSach"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Mã độc giả -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã độc giả" />
            <TextView
                android:id="@+id/tvMaDocGia"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Tên độc giả -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên độc giả" />
            <TextView
                android:id="@+id/tvTenDocGia"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Số lượng mượn -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng mượn" />
            <TextView
                android:id="@+id/tvSoLuong"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Ngày mượn -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày mượn" />
            <TextView
                android:id="@+id/tvNgayMuon"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Ngày hẹn trả -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày hẹn trả" />
            <TextView
                android:id="@+id/tvNgayTra"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Tình trạng -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tình trạng" />
            <TextView
                android:id="@+id/tvTinhTrang"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:layout_marginBottom="12dp"/>

            <!-- Ngày quá hạn -->
            <TextView
                style="@style/TextAppearance.Material3.LabelLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày quá hạn" />
            <TextView
                android:id="@+id/tvNgayQuaHan"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>